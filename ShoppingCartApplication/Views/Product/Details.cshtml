@model ECommerceApp.Models.Product

<h2>@Model.Name</h2>
<img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:300px;" />
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
<p><strong>Stock:</strong> @Model.StockQuantity</p>
@if (Model.DiscountPercentage > 0)
{
    <p><strong>Discount:</strong> @Model.DiscountPercentage %</p>
}
<a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Back to Products</a>
